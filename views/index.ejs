<!DOCTYPE html>
<html>
  <head>
    <title>Task Manager</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">
  </head>
  <body>
   <div class="main">
    <div class="left">
      <div class="card">
        <div class="profile-pic"><img src="https://images.unsplash.com/photo-1600486913747-55e5470d6f40?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80" alt=""></div>
        <div class="dets">
          <span class="mn">Harsh Userethe</span><br>
          <span class="mp">Web Developer</span>
          <div class="line"></div>
        </div>
       
      </div>
     
      <div class="box">
        <div class="items"><i class="ri-home-line" id="iic"></i>  <li>Home</li></div>
        <div class="items"><i class="ri-article-line" id="iid"></i>  <li>Schedule</li></div>
        <div class="items"><i class="ri-calendar-event-line" id="iie"></i>  <li>Events</li></div>
        <div class="items"><i class="ri-settings-line" id="iif"></i>  <li>Settings</li></div>
      </div>
    </div>


    <div class="txt">
      <h4>Today's main focus</h4>
      <h3>Make your day productive</h3>
    </div>
    <div class="right">
     
      <div class="container">
        <form action="/create" method="post">
          <input class="taskIn" type="text" name="task" placeholder="Enter Your Task">
          <input class="taskCr" type="submit">
        </form>
      </div>

      <div class="TaskArea">
       <% result.reverse().forEach(function(data){ %>
          <div class="list">
            <div class="edit">
              <form action="/update/<%=data.id%>">
                <input class="editinput" type="text" name="task" placeholder="<%=data.task%>">
                <input class="editBtn" type="submit">
              </form>
            </div>
            <h5 class="title" style="margin-left: 1vw;"><%=data.task%></h5>
            <div class="icons" style="margin-right: 1vw;">
             <i id="ic1" class="ri-pencil-fill"></i>
              <a href="/delete/<%=data.id%>"><i id="ic2" class="ri-delete-bin-5-fill"></i></a>
            </div>
          </div>
     <% }) %>
      </div>
    </div>
    

   
   </div>
   

   <script>
    var editIcon = document.querySelector("#ic1");
    var editinput = document.querySelector(".edit");
    var editBtn = document.querySelector(".editBtn");

    editIcon.addEventListener("click", function(){
    editinput.style.display = "flex";
    })

    editBtn.addEventListener("click", function(){
    editinput.style.display = "none";
    })
 

    
   </script>
   <script src="/javascripts/script.js"></script>
  </body>
</html>
